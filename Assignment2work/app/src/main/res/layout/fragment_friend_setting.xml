<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FriendSettingFragment">

    <Button
        android:id="@+id/chat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:layout_below="@+id/status"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/custome_chatbutton"/>

    <Button
        android:id="@+id/addfiend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Friend"
        android:layout_below="@+id/status"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:textColor="#FFFFFF"
        android:padding="4dp"
        android:background="@drawable/custom_removebutton"/>
    <Button
        android:id="@+id/cancel_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addfiend"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="60dp"
        android:padding="4dp"
        android:text="Cancel request"
        android:visibility="invisible"
        android:background="@drawable/custom_removebutton"/>

</RelativeLayout>