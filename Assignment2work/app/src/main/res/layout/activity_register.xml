<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/login">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"
        android:layout_marginTop="30dp"
        android:id="@+id/logo"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:text="Tavern Chat"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:layout_below="@+id/logo"
        />

    <EditText
        android:id="@+id/user_name_register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/username"
        android:ems="10"
        android:hint="Name"
        android:padding="10dp"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/email_register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:padding="10dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/user"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:layout_below="@+id/user_name_register"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/password_register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/passw"
        android:ems="10"
        android:padding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/email_register"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/signup"
        android:layout_width="161dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/loginbutton"
        android:text="Register"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/back_to_login"
        android:layout_width="267dp"
        android:layout_height="31dp"
        android:text="Already have account ? Login"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
      android:layout_below="@id/signup"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/inputlogin"/>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:layout_below="@+id/password_register"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>